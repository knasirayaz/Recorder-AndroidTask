<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecorderAndroidTask" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorPurple</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="heading_1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#010102</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="sub_heading_1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lato</item>

    </style>

    <style name="paragraph_1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/lato_light</item>

    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/colorPurple</item>
    </style>
    
    
    <style name="CardViewTopRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>






</resources>